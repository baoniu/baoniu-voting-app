<% include ../partials/head %>


<div class="container">
  <div class="">
    <form role="form" class="ng-pristine ng-valid" action="/poll/new/post" method="post">
      <h3>创建一个新的投票!</h3><hr>
      <div class="form-group">
        <label for="newpoll-title">标题: </label>
        <input type="text" name="title" class="form-control ng-pristine ng-untouched ng-valid">
      </div>
      <div class="form-group">
        <label for="newpoll-options">每行一个选项: </label>
        <textarea rows="4" name="options" class="form-control ng-pristine ng-untouched ng-valid"></textarea>
      </div>
      <input type="submit" class="btn btn-info" value="立即创建">
    </form>
  </div>
</div>

