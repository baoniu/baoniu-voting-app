<% include ../partials/head %>


<div class="container">
  <div class="">
    <h3>我创建的投票列表</h3><hr>
    <div class="poll-list">
      <% if(doc.length >0) {%>
      <%for (var i=0; i<doc.length; ++i) {%>
      <div class="col-xs-6 col-md-2 grid-item">
        <a class="thumbnail" href="/poll/detail/<%=doc[i]._id%>">
          <img alt="<%=doc[i].question%>" data-src="holder.js/100%x180" style="height: 180px; width: 100%; display: block;" src="data:image/svg+xml;base64," data-holder-rendered="true">
          <p><%=doc[i].question%></p>
        </a>
      </div>
      <%}%>
      <% }else {%>
      <p>你还未添加任何投票事项…… <a href="/poll/new" class="btn btn-success btn-xs">立即添加</a> </p>
      <%}%>
    </div>
  </div>
</div>

<script>
  window.onload = function(){
    $('.poll-list').masonry({
      itemSelector: '.grid-item'
    });
  }
</script>
<% include ../partials/foot %>
